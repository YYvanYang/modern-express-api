# Application
NODE_ENV=production
PORT=3000

# Database
DB_NAME=modern_api_prod
DB_USER=prod_user
DB_PASSWORD=strong_password_here
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://prod_user:strong_password_here@postgres:5432/modern_api_prod

# JWT
JWT_SECRET=your_very_long_and_secure_secret_key_here
JWT_EXPIRES_IN=1h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
TRUST_PROXY=1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json